{
  "info": {
    "name": "API Académico (PDF+Imágenes base64) - Localhost",
    "_postman_id": "a6a0d8f1-1b1e-4b0c-9e72-111111111111",
    "description": "Colección completa con PDF e imágenes subidas como archivos (guardadas en base64).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Signup (crear usuario investigador)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/auth/signup", "host": ["{{baseUrl}}"], "path": ["auth", "signup"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullname\": \"Ana Investigadora\",\n  \"email\": \"ana@demo.com\",\n  \"username\": \"ana\",\n  \"password\": \"Secreta123\",\n  \"rol\": \"investigador\"\n}"
            }
          }
        },
        {
          "name": "Signin (login investigador)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/auth/signin", "host": ["{{baseUrl}}"], "path": ["auth", "signin"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"ana\",\n  \"password\": \"Secreta123\"\n}"
            }
          }
        },
        {
          "name": "Signout",
          "request": {
            "method": "POST",
            "url": { "raw": "{{baseUrl}}/auth/signout", "host": ["{{baseUrl}}"], "path": ["auth", "signout"] }
          }
        }
      ]
    },
    {
      "name": "Investigaciones",
      "item": [
        {
          "name": "Listar investigaciones (público)",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/api/investigaciones", "host": ["{{baseUrl}}"], "path": ["api", "investigaciones"] }
          }
        },
        {
          "name": "Crear investigación (PDF + imágenes archivos)",
          "request": {
            "method": "POST",
            "url": { "raw": "{{baseUrl}}/api/investigaciones", "host": ["{{baseUrl}}"], "path": ["api", "investigaciones"] },
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "pdf", "type": "file", "src": "" },
                { "key": "imagenes", "type": "file", "src": "" },
                { "key": "imagenes", "type": "file", "src": "" },
                { "key": "imagenes", "type": "file", "src": "" },
                { "key": "imagenes", "type": "file", "src": "" },
                { "key": "titulo", "type": "text", "value": "Efecto de la luz en plantas" },
                { "key": "area", "type": "text", "value": "biología" },
                { "key": "gradoAcademico", "type": "text", "value": "10" },
                { "key": "descripcion", "type": "text", "value": "Breve descripción del trabajo." },
                { "key": "conclusiones", "type": "text", "value": "Conclusiones del trabajo." },
                { "key": "recomendaciones", "type": "text", "value": "Recomendaciones finales." }
              ]
            },
            "description": "Sube 1 PDF (campo 'pdf') y entre 4 y 6 imágenes (campo repetido 'imagenes')."
          }
          },
        {
          "name": "Detalle investigación (público)",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/api/investigaciones/{{invId}}", "host": ["{{baseUrl}}"], "path": ["api", "investigaciones", "{{invId}}"] }
          }
        },
        {
          "name": "Descargar PDF de investigación",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/api/investigaciones/{{invId}}/pdf", "host": ["{{baseUrl}}"], "path": ["api", "investigaciones", "{{invId}}", "pdf"] }
          }
        },
        {
          "name": "Ver imagen por índice (binaria)",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/api/investigaciones/{{invId}}/imagenes/{{imgIdx}}", "host": ["{{baseUrl}}"], "path": ["api", "investigaciones", "{{invId}}", "imagenes", "{{imgIdx}}"] },
            "description": "imgIdx empieza en 0."
          }
        },
        {
          "name": "Actualizar investigación (solo texto)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/api/investigaciones/{{invId}}", "host": ["{{baseUrl}}"], "path": ["api", "investigaciones", "{{invId}}"] },
            "body": { "mode": "raw", "raw": "{\n  \"descripcion\": \"Descripción actualizada desde Postman\"\n}" }
          }
        },
        {
          "name": "Eliminar investigación",
          "request": {
            "method": "DELETE",
            "url": { "raw": "{{baseUrl}}/api/investigaciones/{{invId}}", "host": ["{{baseUrl}}"], "path": ["api", "investigaciones", "{{invId}}"] }
          }
        }
      ]
    },
    {
      "name": "Comentarios",
      "item": [
        {
          "name": "Agregar comentario (visitante)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/api/{{invId}}/comentarios", "host": ["{{baseUrl}}"], "path": ["api", "{{invId}}", "comentarios"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombreVisitante\": \"Luis\",\n  \"texto\": \"Muy claro\",\n  \"puntaje\": 5\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Preguntas",
      "item": [
        {
          "name": "Crear pregunta (visitante)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/api/{{invId}}/preguntas", "host": ["{{baseUrl}}"], "path": ["api", "{{invId}}", "preguntas"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombreVisitante\": \"Carlos\",\n  \"texto\": \"¿Qué lámparas usaron en el experimento?\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Respuestas",
      "item": [
        {
          "name": "Responder pregunta (investigador)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/api/preguntas/{{preguntaId}}/responder", "host": ["{{baseUrl}}"], "path": ["api", "preguntas", "{{preguntaId}}", "responder"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"respuesta\": \"Usamos lámparas LED de espectro completo, 8 horas al día.\"\n}"
            }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5010" },
    { "key": "invId", "value": "" },
    { "key": "preguntaId", "value": "" },
    { "key": "imgIdx", "value": "0" }
  ]
}
